---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const items = await getCollection("projects");
const projects = items
  .sort((a, b) => (b.data.date?.getTime() ?? 0) - (a.data.date?.getTime() ?? 0));
---
<BaseLayout title="Projects — Tensia Labs">
  <h1 class="text-2xl font-semibold">Projects</h1>
  <p class="mt-2 text-slate-700">What I’m currently building and exploring.</p>

  <ul class="mt-6 space-y-3">
    {projects.map(p => (
      <li class="rounded-lg border border-slate-200 p-4">
        <div class="flex items-center justify-between gap-4">
          <a class="font-medium hover:underline" href={`/projects/${p.slug}/`}>{p.data.title}</a>
          <span class="text-xs text-slate-500">[{p.data.status}]</span>
        </div>
        <div class="mt-1 text-sm text-slate-600">{p.data.summary}</div>
      </li>
    ))}
  </ul>
</BaseLayout>
