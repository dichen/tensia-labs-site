---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getEntry } from "astro:content";

const entry = await getEntry("pages", "about");
if (!entry || entry.data.draft) return Astro.redirect("/");

const { Content } = await entry.render();
---
<BaseLayout title={`${entry.data.title} â€” Tensia Labs`}>
  <h1 class="text-2xl font-semibold">{entry.data.title}</h1>
  {entry.data.description && (
    <p class="mt-2 text-slate-700">{entry.data.description}</p>
  )}
  <article class="prose prose-slate mt-8 max-w-none">
    <Content />
  </article>
</BaseLayout>
