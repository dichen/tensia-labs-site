---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";

const projects = [
  { name: "Tensia Instruments", desc: "Robust and realistic instrumentation UI", href: "/product" },
];
---
<BaseLayout title="Tensia Labs">
  <section class="space-y-4">
    <h1 class="text-3xl font-semibold tracking-tight text-blue-900">Tensia Labs</h1>
    <p class="text-slate-700 leading-relaxed max-w-2xl">
     Tensia Labs builds instrumentation-grade software foundations that let engineers visualize, control, and trust real-time systemsâ€”anywhere.
    </p>
    <p class="text-slate-700 leading-relaxed max-w-2xl">
      Our instrumentation UI platform delivers hardware-accurate, real-time visual components for modern monitoring and automation applications.
    </p>

    <!-- <div class="grid gap-4 pt-6 sm:grid-cols-3">
      <div class="h-28 rounded-lg border border-slate-200 bg-slate-50"></div>
      <div class="h-28 rounded-lg border border-slate-200 bg-slate-50"></div>
      <div class="h-28 rounded-lg border border-slate-200 bg-slate-50"></div>
    </div> -->

    <div class="pt-8">
      <h2 class="text-lg font-semibold">Featured</h2>
      <ul class="mt-3 space-y-3">
        {projects.map(p => (
          <li class="rounded-lg border border-slate-200 p-4">
            <a class="font-medium hover:underline" href={p.href}>{p.name}</a>
            <div class="text-sm text-slate-600">{p.desc}</div>
          </li>
        ))}
      </ul>
    </div>
  </section>
</BaseLayout>
